# vi: ft=zsh

# load main asdf
source $HOME/.asdf/asdf.sh
# set java home (from java plugin)
# source $HOME/.asdf/plugins/java/set-java-home.sh
export JAVA_HOME="$HOME/.asdf/installs/java/adoptopenjdk-openj9-large_heap-8.0.282+8.openj9-0.24.0"

export GOROOT="$HOME/.asdf/installs/golang/1.19/go"
export GOPATH="$HOME/me/go"
export PATH="$PATH:$GOPATH/bin:$GOROOT/bin"
alias gop="cd $GOPATH"
alias gor="cd $GOROOT"
